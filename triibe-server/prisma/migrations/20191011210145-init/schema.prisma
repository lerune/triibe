generator photon {
  provider = "photonjs"
}

generator nexus_prisma {
  provider = "nexus-prisma"
}


datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model User {
  id    String  @default(cuid()) @id
  email String  @unique
  name  String?
  chats Chat[]
}

model Chat {
  id  String  @default(cuid()) @id
  users User[]
  messages Message[]
}

model Message {
  id      String    @default(cuid()) @id
  sentBy  User
  sentAt  DateTime  @default(now())
  content String
}

